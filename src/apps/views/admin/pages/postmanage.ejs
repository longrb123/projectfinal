<%- include("../layout/header") %>

<%- include("../layout/side-bar") %>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="#"><svg class="glyph stroked home">
                        <use xlink:href="#stroked-home"></use>
                    </svg></a></li>
            <li class="active">Posts management</li>
        </ol>
    </div>
    <!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Posts management</h1>
        </div>
    </div>
    <!--/.row-->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">

                    <table data-toolbar="#toolbar" data-toggle="table" class="table table-hover">

                        <thead>
                            <tr>
                                <th data-field="id" data-sortable="true">Title</th>
                                <th data-field="name" data-sortable="true">Description</th>
                                <th data-field="price" data-sortable="true">Price</th>
                                <th data-field="price" data-sortable="true">Image</th>
                                <th data-field="price" data-sortable="true">Category</th>
                                <th data-field="price" data-sortable="true">Post by</th>

                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach((product, index)=>{%>
                            <tr>
                                <td style="text-align:left"><span class="label label-info"><%=product.prd_title%></span>
                                </td>
                                <td style="text-align:justify"><span class="label label-info"></span>
                                    <p style="font-weight: bold;"><%=product.prd_detail%></p>
                                </td>
                                <td style="text-align: left"><span
                                        class="label label-warning"><%=product.prd_price%>$</span></td>

                                <td>
                                    <div class="pull-left image"><img
                                            src="/assets/images/products/<%=product.prd_image%>" alt="User Images"
                                            style="width: 100px; height: 100px">
                                    </div>
                                </td>
                                <td style="text-align: left"><span
                                        class="label label-danger"><%= product.cate_id.cate_name%></span>
                                </td>
                                <td style="text-align: left"><span
                                        class="label label-success"><%= product.user_id.user_fullName%></span>
                                </td>

                                <td class="form-group">
                                    <a id="delete" href="/admin/deletepost/<%=product._id%>" class="btn btn-danger"
                                        onclick="return confirm('Are you sure delete post <%=product.prd_title%>?');"><i
                                            class="glyphicon glyphicon-remove"></i></a>
                                </td>
                            </tr>
                            <%})%>

                        </tbody>
                    </table>
                </div>
                <div class="panel-footer">
                    <nav aria-label="Page navigation example">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                <% if(page > 1){ %>
                                <li class="page-item">
                                    <a class="page-link" href="/admin/post/?page=<%=page-1%>">back</a>
                                </li>
                                <%}%>
                                                <% range.map((i)=>{ %>
                                <li class="page-item <%= page === i ? " active ": " " %>">
                                    <% if(i === "...") {%>
                                    <span><%=i%></span>
                                    <%} else {%>
                                    <a class="page-link" href="/admin/post?page=<%=i%>">
                                        <%=i%>
                                    </a>
                                    <% } %>
                                </li>
                                <%})%>
                                <% if(page < totalPages){ %>
                                <li class="page-item">
                                    <a class="page-link" href="/admin/post/?page=<%=page+1%>">Next</a>
                                </li>
                                <%}%>
                                    </ul>
                                </nav>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!--/.row-->
        </div>
        <!--/.main-->
        <script src="js/bootstrap-table.js"></script>


        <%- include("../layout/footer") %>