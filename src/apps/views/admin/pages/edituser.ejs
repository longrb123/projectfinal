<!doctype html>
<html lang="en">

<head>
    <base href="/assets/profile/">

    <!-- Simple Page Needs
================================================== -->
    <title>Mat</title>
    <meta charset="UTF-8">
    <meta name="description" content="Mat - Resume & vCard HTML Template">
    <meta name="keywords" content="personal, vcard, portfolio">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Favicon
================================================== -->
    <link href="favicon.ico" rel="shortcut icon" type="image/x-icon" />

    <!-- CSS
================================================== -->
    <link rel="stylesheet" href="css/bootstrap.css" />
    <link rel="stylesheet" href="css/reset.css" />
    <link rel="stylesheet" href="cubeportfolio/css/cubeportfolio.min.css" />
    <link rel="stylesheet" href="css/owl.theme.css" />
    <link rel="stylesheet" href="css/owl.carousel.css" />
    <link rel="stylesheet" href="css/style.css" />
    <link rel="stylesheet" href="css/colors/yellow.css" id="color" />


    <!-- Google Web fonts
================================================== -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700,900" rel="stylesheet">

    <!-- Font Icons
================================================== -->
    <link rel="stylesheet" href="icon-fonts/font-awesome-4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="icon-fonts/web-design/flaticon.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!--[if lt IE 9]>
	<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
<![endif]-->
    <!--Oswald Font -->
    <link href='http://fonts.googleapis.com/css?family=Oswald:400,300,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" type="text/css" href="css/tooltipster.css" />
    <!-- home slider-->
    <link href="css/pgwslider.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <link href="style.css" rel="stylesheet" media="screen">
    <link href="responsive.css" rel="stylesheet" media="screen">

</head>

<body>


    <!-- Wrapper -->
    <div class="wrapper top_60 container">
        <div class="row">

            <!-- Profile Section
================================================== -->
            <div class="col-lg-3 col-md-4">
                <div class="profile">
                    <div class="profile-name">
                        <span class="name"><%= user.user_fullName%></span><br>

                    </div>
                    <figure class="profile-image">
                        <img src="/assets/images/users/<%=user.user_img%>" alt="">
                    </figure>
                    <ul class="profile-information">
                        <li></li>
                        <li>
                            <p><span>Name:</span> <%= user.user_fullName%></p>
                        </li>
                        <li>
                            <p><span>Birthday:</span> <%= user.user_dob%></p>
                        </li>
                        <li>
                            <p><span>Gender:</span> <%= user.user_gender%></p>
                        </li>
                        <li>
                            <p><span>Email:</span> <%= user.user_mail%></p>
                        </li>
                        <li>
                            <p><span>Address:</span> <%= user.user_address%></p>
                        </li>
                        <li>
                            <p><span>Phone:</span> <%= user.user_phone%></p>
                        </li>
                    </ul>
                    <div class="col-md-12">
                        <a href="/profile-<%=user._id%>" class="site-btn icon"> Profile <i class="fa fa-user"
                                aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>

            <!-- Page Tab Container Div -->
            <div id="ajax-tab-container" class="col-lg-9 col-md-8 tab-container">

                <!-- Header
================================================== -->
                <div class="row">
                    <header class="col-md-12">
                        <nav>
                            <div class="row">
                                <!-- navigation bar -->
                                <div class="col-md-8 col-sm-8 col-xs-4">
                                    <ul class="tabs">
                                        <li class="tab">
                                            <a class="home-btn" href="/home"><i class="fa fa-home"
                                                    aria-hidden="true"></i></a>
                                        </li>
                                        <li class="tab"><a href="/addpost">Post</a></li>
                                        <li class="tab"><a href="/chat">Messenger</a></li>
                                        <li class="tab"><a href="/logout">Logout</a></li>
                                    </ul>
                                </div>
                                <div class="col-md-4 col-sm-4 col-xs-8 dynamic">

                                    <div class="hidden-md social-icons pull-right">
                                        <a class="fb" href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                                        <a class="tw" href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                                        <a class="ins" href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                                        <a class="dr" href="#"><i class="fa fa-dribbble" aria-hidden="true"></i></a>
                                    </div>
                                </div>
                            </div>
                        </nav>
                    </header>


                    <div class="clearfix main_content floatleft">

                        <div class="clearfix slider">
                            <div class="clearfix newsletter">
                                <form method="post" enctype="multipart/form-data">
                                    <h2>Edit Profile</h2>
                                    <label> Name </label>
                                    <br><br>

                                    <textarea id="user_fullName" name="user_fullName" rows="2"
                                        cols="90"><%= user.user_fullName%></textarea>

                                    <br><br>
                                    <label>Gender </label>
                                    <select name="user_gender">
                                        <option value="Female" <% if(user.user_gender ===1) {%> selected <%}%>>Female</option>
                                        <option value="Male" <% if(user.user_gender ===0) {%> selected <%}%>>Male</option>
                                    </select>
                                    <br><br>
                                    <label>Email</label>
                                    <br> <br>
                                    <input id="user_mail" name="user_mail" disabled value="<%= user.user_mail%>">

                                            <br> <br>
                                            <label>Password</label>
                                            <br> <br>
                                            <input id="user_pass" type="password" name="user_pass"
                                                value="<%= user.user_pass%>" />
                                            <br> <br>
                                            <label>Address</label>
                                            <br> <br>
                                            <textarea id="user_address" name="user_address" rows="2"
                                                cols="90"><%= user.user_address%></textarea>
                                            <br> <br>
                                            <label>Phone</label>
                                            <br> <br>
                                            <textarea id="user_phone" name="user_phone" rows="2"
                                                cols="90"><%= user.user_phone%></textarea>
                                            <br><br>
                                            <label> Birthday </label>
                                            <br><br>
                                            <input type="date" name="user_dob">

                                            <br><br>
                                            <label>Upload Image</label>
                                            <input class="input-file" type="file" name="user_img" id="file">

                                            <br> <br>
                                            <input type="submit" value="Submit" id="mc-embedded-subscribe" />
                                </form>
                            </div>
                        </div>
                    </div>


                    <!-- Javascripts
================================================== -->
                    <script src="js/jquery-2.1.4.min.js"></script>
                    <script src="cubeportfolio/js/jquery.cubeportfolio.min.js"></script>
                    <script src="js/bootstrap.min.js"></script>
                    <script src="js/jquery.easytabs.min.js"></script>
                    <script src="js/owl.carousel.min.js"></script>
                    <script src="js/main.js"></script>
                    <script src="https://kit.fontawesome.com/yourcode.js"></script>
                    <!-- for color alternatives -->
                    <script src="js/jquery.cookie-1.4.1.min.js"></script>
                    <script src="js/Demo.js"></script>
                    <link rel="stylesheet" href="css/Demo.min.css" />


</body>

</html>