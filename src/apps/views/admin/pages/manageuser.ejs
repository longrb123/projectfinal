<%- include("../layout/header") %>

<%- include("../layout/side-bar") %>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="#"><svg class="glyph stroked home">
                        <use xlink:href="#stroked-home"></use>
                    </svg></a></li>
            <li class="active">Users list</li>
        </ol>
    </div>
    <!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Users list</h1>
        </div>
    </div>
    <!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">

                    <table data-toolbar="#toolbar" data-toggle="table" class="table table-hover">

                        <thead>
                            <tr>
                                <th data-field="id" data-sortable="true">Name</th>
                                <th data-field="name" data-sortable="true">Email</th>
                                <th data-field="price" data-sortable="true">Address</th>

                                <th data-field="price" data-sortable="true">Phone</th>
                                <th data-field="price" data-sortable="true">Image</th>
                                <th>Role</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((user, index)=>{%>
                            <tr>
                                <td style="text-align:left"><span
                                        class="label label-default"><%=user.user_fullName%></span></td>
                                <td style="text-align: left"><span class="label label-info"><%=user.user_mail%></span>
                                </td>
                                <td style="text-align: left"><span
                                        class="label label-warning"><%=user.user_address%></span></td>
                                <td style="text-align: left"><span
                                        class="label label-warning"><%=user.user_phone%></span></td>
                                <td>
                                    <div class="pull-left image"><img src="/assets/images/users/<%=user.user_img%>"
                                            alt="User Images" style="width: 100px; height: 100px">
                                    </div>
                                </td>

                                <td>
                                    <% if (user.user_level === 1) {%>
                                    <span class="label label-primary">Admin</span>
                                    <%} else {%>
                                    <span class="label label-success">Member</span>
                                    <%}%>
                                            </td>
                                            <td class="form-group">
                                    <a id="delete" href="/admin/deleteuser/<%=user._id%>" class="btn btn-danger"
                                    onclick="return confirm('Are you sure delete user <%=user.user_fullName%>?');"><i
                                        class="glyphicon glyphicon-remove"></i></a>
                                </td>
                            </tr>
                            <%})%>

                        </tbody>
                    </table>
                </div>
                <div class="panel-footer">
                    <nav aria-label="Page navigation example">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                <% if(page > 1){ %>
                                <li class="page-item">
                                    <a class="page-link" href="/admin/user/?page=<%=page-1%>">back</a>
                                </li>
                                <%}%>
                                                <% range.map((i)=>{ %>
                                <li class="page-item <%= page === i ? " active ": " " %>">
                                    <% if(i === "...") {%>
                                    <span><%=i%></span>
                                    <%} else {%>
                                    <a class="page-link" href="/admin/user?page=<%=i%>">
                                        <%=i%>
                                    </a>
                                    <% } %>
                                </li>
                                <%})%>
                                <% if(page < totalPages){ %>
                                <li class="page-item">
                                    <a class="page-link" href="/admin/user/?page=<%=page+1%>">Next</a>
                                </li>
                                <%}%>
                                    </ul>
                                </nav>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!--/.row-->
        </div>
        <!--/.main-->
        <script src="js/bootstrap-table.js"></script>


        <%- include("../layout/footer") %>