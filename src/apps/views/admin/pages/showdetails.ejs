                            </a>
                        </div>
                        <div class="single_more_themes floatleft">
                            <img src="http://dummyimage.com/220x150/000/fff&text=Thumbnail" alt="" />
                            <a href="">
                                <h2>Magazine Wp Template</h2>
                            </a>
                        </div>

                    </div>
                </div>

            </div>
            <div class="clearfix sidebar_container floatright">

                <div class="clearfix newsletter">
                    <form>

                        <figure class="profile-image">
                            <img src="/assets/images/products/<%=product.user_id.user_img%>" alt="">
                        </figure>
                        <%  if (user) {%>
                        <a href="/chat?id=<%= product.user_id._id %>">
                            <input type=" button" value="Chat with <%= product.user_id.user_fullName%>"
                                class="btn btn-primary">
                        </a>
                        <% } else { %>
                        <a href="/login">
                            <input type=" button" value="Chat with <%= product.user_id.user_fullName%>"
                                class="btn btn-primary">
                        </a>
                        <% } %>
                    </form>
                </div>
                <div class="clearfix sidebar">
                    <div class="clearfix sidebar">
                        <div class="clearfix single_footer_top floatleft">
                            <h2>Categories</h2>
                            <ul>
                                <% for(let menu of menus) { %>
                                <li><a href="/category-<%=menu._id %>"><%= menu.cate_name%></a></li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

