<body>

    <section id="header_area">
        <div class="wrapper header">
            <div class="clearfix header_top">
                <div class="clearfix logo floatleft">
                    <a href="">
                        <h1><span>Yellow</span> Blog</h1>
                    </a>
                </div>
                <div class="clearfix search floatright">
                    <form>
                        <input type="text" placeholder="Search" />
                        <input type="submit" />
                    </form>
                </div>
            </div>
            <div class="header_bottom">
                <nav>
                    <ul id="nav">
                        <li><a href="/home">Home</a></li>
                        <li><a href="/addpost">Post</a></li>
                        <%  if (user) {%>
                        <li><a href="/chat">Messenger</a></li>
                        <li><a href="/profile-<%=user._id%>">Profile</a></li>
                        <li><a href="/logout">Logout</a></li>
                        <% } else { %>
                        <li><a href="/login">Login</a></li>
                        <% } %>

                    </ul>
                </nav>
            </div>
        </div>
    </section>

    <section id="content_area">
        <div class="clearfix wrapper main_content_area">

            <div class="clearfix main_content floatleft">


                <div class="clearfix content">
                    <h1><%= product.prd_title %> </h1>
                    <div class="clearfix post-meta">
                        <p><span><i class="fa fa-user"></i> <%= product.user_id.user_fullName%></span>
                            <span><i class="fa fa-clock-o"></i> <%= product.createdAt%></span> <br> <br>
                            <span><i class="fa fa-folder"></i> <%= product.cate_id.cate_name%></span>
                            <span><i class="fa fa-money"> <%= product.prd_price%>$</i></span>
                            <span><i class="fa fa-phone"> <%= product.user_id.user_phone%></i></span>
                        </p>

                    </div>

                    <p><%= product.prd_detail %></p>
                    <br><br>

                    <div class=" aligncenter">
                        <img src="/assets/images/products/<%=product.prd_image%>" class="aligncenter" alt=""
                            style="width: 600px; height: 300px;" />
                    </div>
                    <br> <br>



                    <a class="btn" href="">Preview</a>
                    <a class="btn" href="">Download</a>

                </div>

                <div class="more_themes">
                    <h2>Related Post <i class="fa fa-thumbs-o-up"></i></h2>
                    <div class="more_themes_container">
                        <div class="single_more_themes floatleft">
                            <img src="http://dummyimage.com/220x150/000/fff&text=Thumbnail" alt="" />
